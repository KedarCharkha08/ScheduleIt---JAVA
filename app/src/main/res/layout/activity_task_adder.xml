<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".TaskAdderActivity"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="2"
        android:gravity="start">

        <EditText
            android:id="@+id/addername"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_bg"
            android:hint="Remind me to ..."
            android:outlineSpotShadowColor="@color/black"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/antic"
            app:boxStrokeColor="@color/black"
            app:counterTextColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="callcontacts"
            android:src="@drawable/icons8_contacts_48"
            android:background="@drawable/layout_bg1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:onClick="sendmsg"
            android:src="@drawable/icons8_circled_envelope_48"

            android:background="@drawable/layout_bg1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:onClick="setmic"
            android:src="@drawable/icons8_microphone_48"
            android:background="@drawable/layout_bg1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textSize="20dp"
            android:fontFamily="@font/antic"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            >

        </TextView>

        <EditText
            android:id="@+id/adderdes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Details about task"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:boxStrokeColor="@color/black"
            app:counterTextColor="@color/black"
            android:background="@drawable/border_bg"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/antic"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="13dp"
            android:src="@drawable/icons8_planner_48" />

        <TextView
            android:id="@+id/adderdatetv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:onClick="setdate"
            android:paddingRight="13dp"
            android:text="---"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:fontFamily="@font/antic"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:paddingRight="3dp"
            android:src="@drawable/icons8_alarm_clock_96" />

        <TextView
            android:id="@+id/addertimetv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:onClick="settime"
            android:paddingRight="15dp"
            android:text="---"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="@font/antic"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:src="@drawable/icons8_synchronize_48" />

        <TextView
            android:id="@+id/adderrepeat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:onClick="setrepeat"
            android:paddingRight="13dp"
            android:text="None"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="@font/antic">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:src="@drawable/icons8_paint_palette_48"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/addermarker"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:paddingLeft="0dp"
                android:layout_weight="1"
                android:onClick="setcolor"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:src="@drawable/mblack" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center">

        <Button
            android:id="@+id/adderset"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="@drawable/adderbutton"
            android:text="Set"
            android:fontFamily="@font/antic"
            android:textColor="#000000"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>







