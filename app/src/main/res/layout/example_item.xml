<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/lightWhite"
    android:backgroundTintMode="add"
    android:backgroundTint="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:background="@drawable/layout_bg1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icons8_data_quality_48" />

            <TextView
                android:id="@+id/reltitle"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="11"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Title"
                android:textSize="20sp"
                android:fontFamily="@font/antic"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/time"></ImageView>

            <TextView
                android:id="@+id/reltime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Time"
                android:fontFamily="@font/antic"
                android:textColor="@color/black">

            </TextView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/date">

            </ImageView>

            <TextView
                android:id="@+id/reldate"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:fontFamily="@font/antic"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Date"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/repeat">

            </ImageView>

            <TextView
                android:id="@+id/relrep"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="None"
                android:fontFamily="@font/antic"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/relmarker"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="1">

            </ImageView>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>